*filter
:INPUT DROP
:FORWARD DROP
:OUTPUT DROP


# accept loopback
-A INPUT -i lo -j ACCEPT
-A OUTPUT -o lo -j ACCEPT


# accept SSH
-A INPUT -i home -p tcp -m tcp --dport 22 -j ACCEPT
-A OUTPUT -p tcp -m tcp --sport 22 -m state --state RELATED,ESTABLISHED -j ACCEPT


# accept DNS
-A INPUT -s 8.8.8.8/32 -p tcp -m tcp --sport 853 -m state --state RELATED,ESTABLISHED -j ACCEPT
-A OUTPUT -d 8.8.8.8/32 -p tcp -m tcp --dport 853 -j ACCEPT

-A INPUT -s 8.8.4.4/32 -p tcp -m tcp --sport 853 -m state --state RELATED,ESTABLISHED -j ACCEPT
-A OUTPUT -d 8.8.4.4/32 -p tcp -m tcp --dport 853 -j ACCEPT


# forwarding
-A FORWARD -i home -o internet -j ACCEPT
-A FORWARD -i internet -o home -m state --state RELATED,ESTABLISHED -j ACCEPT

-A FORWARD -i iot -o internet -j ACCEPT
-A FORWARD -i internet -o iot -m state --state RELATED,ESTABLISHED -j ACCEPT

-A FORWARD -i roommate -o internet -j ACCEPT
-A FORWARD -i internet -o roommate -m state --state RELATED,ESTABLISHED -j ACCEPT


COMMIT
